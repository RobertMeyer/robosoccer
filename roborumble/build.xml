<?xml version="1.0" encoding="UTF-8"?>

<!-- ====================================================================== -->
<!--  Apache Ant build script for building RoboRumble                       -->
<!-- ====================================================================== -->

<project name="roborumble" default="build" basedir="../build">
  <description>Apache Ant build script for building RoboRumble</description>

  <!-- Enable debug information when compiling -->  
  <property name="debug" value="on"/>

  <!-- Import common build file -->
  <import file="../build/build.xml"/>

  <!-- ====================================== -->
  <!-- Target: build                          -->
  <!-- ====================================== -->
  <target
      name="build"
      description="build RoboRumble"
      depends="compile.roborumble, robocode.jar">
  </target>

</project>