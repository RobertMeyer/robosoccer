<?xml version="1.0" encoding="UTF-8"?>

<!-- ====================================================================== -->
<!--  Apache Ant build script for building the Robocode                     -->
<!-- ====================================================================== -->

<project name="autoextract" default="build" basedir=".">
  <description>Apache Ant build script for building the Robocode</description>

  <!-- Enable debug information when compiling -->  
  <property name="debug" value="on"/>

  <!-- Import common build file -->
  <import file="../build/build.xml"/>

  <!-- ====================================== -->
  <!-- Target: build                          -->
  <!-- ====================================== -->
  <target
      name="build"
      description="Build Robocode">

    <!-- Compile Robocode -->
    <antcall target="compile.robocode"/>

    <!-- Copy resources -->
    <copy todir="${build}/resources">
      <fileset dir="resources"/>
    </copy>

    <!-- Build robocode.jar (classpath for robots) -->
    <antcall target="robocode.jar"/>

      <!-- Compile (sample) robots -->
    <antcall target="compile.robots"/>

    <!-- Copy compiles robots to Robocode working directory -->
    <copy todir="${build}/robots">
      <fileset dir="${build.robots}"/>
    </copy>

    <copy todir="${build}/battles">
      <fileset dir="../robocodeextract/battles"/>
    </copy>
 
  </target>

</project>